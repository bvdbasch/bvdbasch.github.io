<div class="container js-container">
   {{#if menus.mainMenu}}
      {{> menu menus.mainMenu}}
   {{/if}}
   <div class="content">
      <header class="top">
         <div class="top__item">
            <a class="logo" href="{{@website.url}}">
               {{#if @website.logo}}
                  <img src="{{@website.logo}}" alt="{{@website.name}}">
               {{else}}
                  {{@website.name}}
               {{/if}}
            </a>
         </div>
         <div class="top__item top__item--right">
            {{#if menus.mainMenu}}
              <button class="menu-toggle js-menu-toggle" aria-label="{{ translate 'common.menu' }}" aria-expanded="false">
						<span class="menu-toggle-box">
							<span class="menu-toggle-inner"> {{ translate 'common.menu' }}</span>
						</span>
					</button>
            {{/if}}
         </div>
      </header>